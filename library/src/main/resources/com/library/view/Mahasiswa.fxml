<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.library.controller.MahasiswaController"
            prefWidth="900" prefHeight="600">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label text="Dashboard Mahasiswa" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <center>
        <TabPane>
            <Tab text="Cari & Pinjam Buku" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="8">
                        <TextField fx:id="searchField" promptText="Cari judul / penulis..." />
                        <Button text="Cari" onAction="#handleSearch"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Pinjam (pilih buku)" onAction="#handleBorrowSelected"/>
                    </HBox>

                    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colTitle" text="Judul" prefWidth="320"/>
                            <TableColumn fx:id="colAuthor" text="Penulis" prefWidth="240"/>
                            <TableColumn fx:id="colStock" text="Stok" prefWidth="80"/>
                        </columns>
                    </TableView>

                    <Label fx:id="msgLabel" text="" style="-fx-text-fill: red;"/>
                    <Label text="Catatan: Due date otomatis 7 hari dari tanggal pinjam."/>
                </VBox>
            </Tab>

            <Tab text="Pinjaman Saya" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="loanTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colLoanId" text="Loan ID" prefWidth="80"/>
                            <TableColumn fx:id="colLoanBook" text="Buku" prefWidth="360"/>
                            <TableColumn fx:id="colLoanDate" text="Pinjam" prefWidth="120"/>
                            <TableColumn fx:id="colDueDate" text="Due" prefWidth="120"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="140"/>
                            <TableColumn fx:id="colFine" text="Fine" prefWidth="90"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

</BorderPane>
