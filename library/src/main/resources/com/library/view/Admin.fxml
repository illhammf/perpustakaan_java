<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.library.controller.AdminController"
            prefWidth="900" prefHeight="600">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label text="Dashboard Admin" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="8">
                <TextField fx:id="searchField" promptText="Cari username / nama..." />
                <Button text="Cari" onAction="#handleSearch"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Tambah User" onAction="#handleAdd"/>
                <Button text="Edit User" onAction="#handleEdit"/>
                <Button text="Hapus User" onAction="#handleDelete"/>
            </HBox>

            <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="160"/>
                    <TableColumn fx:id="colFullName" text="Nama Lengkap" prefWidth="260"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="160"/>
                </columns>
            </TableView>

            <Label fx:id="msgLabel" text="" style="-fx-text-fill: red;"/>
        </VBox>
    </center>

</BorderPane>
