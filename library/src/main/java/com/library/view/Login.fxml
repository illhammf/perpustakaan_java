<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.perpustakaan.controller.LoginController"
      spacing="12" alignment="CENTER" prefWidth="420" prefHeight="320">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Login Sistem Perpustakaan" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>

    <Button text="Login" onAction="#handleLogin" prefWidth="140"/>
</VBox>
