<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.library.controller.PustakawanController"
            prefWidth="900" prefHeight="600">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label text="Dashboard Pustakawan" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <center>
        <TabPane>
            <Tab text="CRUD Buku" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="8">
                        <TextField fx:id="searchBookField" promptText="Cari judul / penulis..." />
                        <Button text="Cari" onAction="#handleSearchBook"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Tambah" onAction="#handleAddBook"/>
                        <Button text="Edit" onAction="#handleEditBook"/>
                        <Button text="Hapus" onAction="#handleDeleteBook"/>
                    </HBox>

                    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colTitle" text="Judul" prefWidth="220"/>
                            <TableColumn fx:id="colAuthor" text="Penulis" prefWidth="180"/>
                            <TableColumn fx:id="colCategory" text="Kategori" prefWidth="120"/>
                            <TableColumn fx:id="colStock" text="Stok" prefWidth="80"/>
                        </columns>
                    </TableView>

                    <Label fx:id="bookMsgLabel" text="" style="-fx-text-fill: red;"/>
                </VBox>
            </Tab>

            <Tab text="Pengembalian" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="8">
                        <Button text="Proses Pengembalian (pilih)" onAction="#handleReturnSelected"/>
                        <Label text="Catatan: jika lewat due date â†’ status TERLAMBAT + fine otomatis"/>
                    </HBox>

                    <TableView fx:id="loanTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colLoanId" text="Loan ID" prefWidth="80"/>
                            <TableColumn fx:id="colLoanBook" text="Buku" prefWidth="260"/>
                            <TableColumn fx:id="colLoanDate" text="Pinjam" prefWidth="120"/>
                            <TableColumn fx:id="colDueDate" text="Due" prefWidth="120"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                            <TableColumn fx:id="colFine" text="Fine" prefWidth="90"/>
                        </columns>
                    </TableView>

                    <Label fx:id="loanMsgLabel" text="" style="-fx-text-fill: red;"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
