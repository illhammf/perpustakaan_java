<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.library.controller.LoginController"
            styleClass="login-root"
            prefWidth="1100" prefHeight="650">

    <center>
        <HBox spacing="60" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- ================= LEFT (ILUSTRASI) ================= -->
            <VBox alignment="CENTER" spacing="14" prefWidth="520">
                <ImageView fitWidth="420" preserveRatio="true">
                    <image>
                        <Image url="@/com/library/assets/login-image.png"/>
                    </image>
                </ImageView>

                <!-- font dibuat lebih mirip contoh -->
                <Label text="WELCOME!"
                       style="-fx-font-size:30px; -fx-font-weight:800; -fx-font-family:'Segoe UI'; -fx-text-fill:#F18216;"/>

                <!-- teks bawah gambar jadi seperti contoh (1 baris, kecil, center) -->
                <Label text="Access your favorite books easily with the Campus Library"
                       style="-fx-text-fill:#334155; -fx-font-size:12px; -fx-font-family:'Segoe UI'; -fx-font-weight:600;"
                       textAlignment="CENTER"/>
            </VBox>

            <!-- ================= RIGHT (FORM LOGIN) ================= -->
            <VBox spacing="16"
                  prefWidth="380"
                  alignment="CENTER"
                  styleClass="login-card">

                <!-- Hello tebal besar seperti contoh -->
                <Label text="Hello!"
                       style="-fx-font-size:28px; -fx-font-weight:800; -fx-font-family:'Segoe UI'; -fx-text-fill:#0f172a;"/>

                <!-- subtext kecil seperti contoh -->
                <Label text="Create an account"
                       style="-fx-font-size:12px; -fx-font-family:'Segoe UI'; -fx-font-weight:600; -fx-text-fill:#64748b;"/>

                <TextField fx:id="usernameField"
                           promptText="Username"
                           styleClass="login-field"
                           maxWidth="300"/>

                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               styleClass="login-field"
                               maxWidth="300"/>

                <!-- ERROR MESSAGE -->
                <Label fx:id="errorLabel"
                       text=""
                       wrapText="true"
                       maxWidth="300"
                       styleClass="error-text"/>

                <Button text="Sign in"
                        onAction="#handleLogin"
                        styleClass="btn-login"
                        maxWidth="300"/>

                <!-- <Button text="Sign in with Google"
                        onAction="#handleGoogleLogin"
                        styleClass="btn-google"
                        maxWidth="300"/> -->
            </VBox>

        </HBox>
    </center>

</BorderPane>
